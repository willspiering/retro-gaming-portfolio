---
interface Props {
  education: {
    degree: string;
    field: string;
    school: string;
    start_date: string;
    end_date: string;
  }[];
}

const { education } = Astro.props;
---

<section id="education" class="section pixel-border">
  <div class="section-title">
    <h2>Education</h2>
  </div>
  {education.map((edu) => (
    <div class="education-item">
      <h3 class="degree">{edu.field}</h3>
      <p>
        <strong>{edu.school}</strong><br />
        {edu.degree} | {edu.start_date} - {edu.end_date}
      </p>
    </div>
  ))}
</section>

<style>
  .education-item {
    margin-bottom: 20px;
  }

  .degree {
    font-family: 'Press Start 2P', cursive;
    color: var(--highlight-color);
    font-size: 0.9em;
    margin-bottom: 5px;
  }

  .education-item p {
    font-size: 0.9em;
    margin: 0;
  }
</style>