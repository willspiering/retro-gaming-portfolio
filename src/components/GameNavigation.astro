  <style>
    .game-navigation {
      display: flex;
      justify-content: space-around;
      background-color: var(--card-bg);
      padding: 10px;
      margin-bottom: 20px;
      border: 4px solid var(--border-color);
      image-rendering: pixelated;
    }
  
    .nav-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      cursor: pointer;
      transition: all 0.2s ease;
      padding: 10px;
      border: 2px solid transparent;
      background-color: var(--bg-color);
      box-shadow: 3px 3px 0 var(--border-color);
    }
  
    .nav-item:hover, .nav-item:focus {
      transform: translate(-2px, -2px);
      box-shadow: 5px 5px 0 var(--highlight-color);
      border-color: var(--highlight-color);
      outline: none;
    }
  
    .nav-item:active {
      transform: translate(2px, 2px);
      box-shadow: 1px 1px 0 var(--highlight-color);
    }
  
    .nav-icon {
      font-size: 24px;
      margin-bottom: 5px;
      filter: grayscale(100%) brightness(150%);
      transition: filter 0.2s ease;
    }
  
    .nav-item:hover .nav-icon,
    .nav-item:focus .nav-icon {
      filter: grayscale(0%) brightness(100%);
    }
  
    span {
      font-family: 'Press Start 2P', cursive;
      font-size: 0.7em;
      color: var(--text-color);
      text-align: center;
      text-shadow: 1px 1px 0 var(--bg-color), -1px -1px 0 var(--bg-color), 1px -1px 0 var(--bg-color), -1px 1px 0 var(--bg-color);
    }
  
    @media (max-width: 768px) {
      .game-navigation {
        flex-wrap: wrap;
      }
  
      .nav-item {
        flex: 1 0 30%;
        margin: 5px;
      }
    }
  
    /* 8-bit inspired animation for hover state */
    @keyframes blink {
      0%, 49% { opacity: 1; }
      50%, 100% { opacity: 0; }
    }
  
    .nav-item::after {
      content: '';
      position: absolute;
      top: -4px;
      left: -4px;
      right: -4px;
      bottom: -4px;
      border: 2px solid var(--highlight-color);
      opacity: 0;
      pointer-events: none;
    }
  
    .nav-item:hover::after,
    .nav-item:focus::after {
      animation: blink 0.5s step-end infinite;
    }
  </style>
  
  <script>
    document.querySelectorAll('.nav-item').forEach(item => {
      item.addEventListener('click', () => {
        const section = item.getAttribute('data-section');
        const element = document.getElementById(section);
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  </script>