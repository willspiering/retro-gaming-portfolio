---
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import Navigation from "../components/Navigation.astro";
import resumeData from "../data/resume-basic.json";

const { name, headline, contact } = resumeData.personal_info;
---
<div class="sidebar-content">
    <header>
        <h1>{name}</h1>
        <p class="title">{headline}</p>
        <div class="contact-info">
            <a href={contact.linkedin} target="_blank">LinkedIn</a>
            <a href={contact.github} target="_blank">GitHub</a>
            <a href={contact.twitter} target="_blank">Twitter</a>
        </div>
    </header>
    <Navigation />
    <div class="sidebar-footer">
        <ThemeSwitcher />
    </div>
</div>

<style>
    .sidebar-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 20px;
        justify-content: center;
    }
    
    header {
        text-align: center;
    }
    
    h1 {
        margin: 0;
        font-size: 2rem;
        color: var(--highlight-color);
        text-shadow: 2px 2px var(--accent-color);
    }
    
    .title {
        font-family: 'Roboto', sans-serif;
        margin: 10px 0 0;
        font-size: 1rem;
        color: var(--secondary-color);
    }
    
    .sidebar-footer {
        margin-top: auto;
        display: flex;
        gap: 20px;
        justify-content: center;
  }

  .contact-info {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 20px;
    gap: 10px;
  }

  .contact-info a {
    font-family: 'Press Start 2P', cursive;
    padding: 5px 10px;
    background-color: var(--accent-color);
    color: var(--card-bg);
    border-radius: 4px;
    transition: background-color 0.3s ease;
    font-size: 0.5em;
    text-decoration: none;
  }

  .contact-info a:hover {
    background-color: var(--highlight-color);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2em;
    }

    .title {
      font-size: 0.9em;
    }
  }
</style>
