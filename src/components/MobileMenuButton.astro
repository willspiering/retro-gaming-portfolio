<button id="mobile-menu-button" class="mobile-menu-button pixel-border">
    <div class="menu-icon">
      <div class="icon-line"></div>
      <div class="icon-line"></div>
      <div class="icon-line"></div>
    </div>
    <span class="menu-text">Menu</span>
  </button>
  
  <style>
    .mobile-menu-button {
      display: none;
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      background-color: var(--highlight-color);
      color: var(--bg-color);
      border: none;
      padding: 10px 20px;
      font-family: 'Press Start 2P', cursive;
      font-size: 14px;
      cursor: pointer;
      z-index: 1000;
      transition: background-color 0.3s ease;
    }
  
    .menu-icon {
      display: inline-block;
      width: 20px;
      height: 20px;
      margin-right: 10px;
      vertical-align: middle;
      position: relative;
    }
  
    .icon-line {
      position: absolute;
      left: 0;
      width: 100%;
      height: 4px;
      background-color: var(--bg-color);
      transition: transform 0.3s ease;
    }
  
    .icon-line:nth-child(1) { top: 0; }
    .icon-line:nth-child(2) { top: 8px; }
    .icon-line:nth-child(3) { top: 16px; }
  
    .menu-text {
      vertical-align: middle;
    }
  
    .mobile-menu-button.open .icon-line:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
  
    .mobile-menu-button.open .icon-line:nth-child(2) {
      opacity: 0;
    }
  
    .mobile-menu-button.open .icon-line:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  
    .mobile-menu-button.open .menu-text {
      font-size: 12px;
    }
  
    /* 8-bit inspired hover effect */
    .mobile-menu-button:hover, .mobile-menu-button:focus {
      outline: none;
      background-color: var(--secondary-color);
    }
  
    .mobile-menu-button:active {
      transform: translate(-50%, 2px);
    }
  
    @media (max-width: 768px) {
      .mobile-menu-button {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  </style>
  
  <script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const menuText = mobileMenuButton?.querySelector('.menu-text');
    
    mobileMenuButton?.addEventListener('click', () => {
      document.body.classList.toggle('sidebar-open');
      mobileMenuButton.classList.toggle('open');
      if (menuText) {
        menuText.textContent = mobileMenuButton.classList.contains('open') ? 'Close' : 'Menu';
      }
    });
  </script>