---
interface Props {
  skills: string[];
}

const { skills } = Astro.props;
---

<section id="skills" class="section pixel-border">
  <div class="section-title">
    <h2>Skills</h2>
  </div>
  <div class="skill-tags">
    {skills.map(skill => (
      <span class="skill-tag">{skill}</span>
    ))}
  </div>
</section>

<style>
  .skills-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 20px;
  }

  .skill-name {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.8em;
    color: var(--highlight-color);
    margin-bottom: 5px;
    display: block;
  }

  .progress-bar {
    height: 20px;
    background-color: var(--muted-color);
    border-radius: 10px;
    overflow: hidden;
  }

  .progress {
    height: 100%;
    background-color: var(--highlight-color);
    transition: width 1s ease-in-out;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .skill-tag {
    font-family: 'Press Start 2P', cursive;
    background-color: var(--secondary-color);
    color: var(--card-bg);
    padding: 5px 10px;
    font-size: 0.7em;
    border-radius: 4px;
  }
</style>